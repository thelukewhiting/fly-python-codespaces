{
    "name": "Fly.io Python",
    "dockerFile": "Dockerfile",
    "context": "..",
    "remoteUser": "vscode",
    "settings": {
        "python.defaultInterpreterPath": "/workspaces/fly-python-codespaces/.venv/bin/python",
        "python.pythonPath": "/workspaces/fly-python-codespaces/.venv/bin/python",
        "python.formatting.provider": "black",
        "python.formatting.blackPath": "/workspaces/fly-python-codespaces/.venv/bin/black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
    ],
    "postCreateCommand": "poetry install && fly version",
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/vscode/.fly/bin:/workspaces/fly-python-codespaces/.venv/bin"
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "vscode",
            "upgradePackages": "true"
        }
    }
}